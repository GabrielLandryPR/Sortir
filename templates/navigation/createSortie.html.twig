{% extends 'base.html.twig' %}

{% block title %}
    Créer une sortie
{% endblock %}

{% block body %}
    <div class="content-container">
        <h1>Créer une sortie</h1>

        {{ form_start(sortieFormType, {'attr': {'class': 'my-form'}}) }}
        {{ form_widget(sortieFormType) }}
        {{ form_end(sortieFormType) }}

        <div id="map" style="height: 200px; margin-top: 20px;"></div>

        <div>
            <strong>Durée formatée:</strong> <span id="formattedDuration"></span>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/lieu.js') }}"></script>
    <script src="{{ asset('js/map.js') }}"></script>
    <script src="{{ asset('js/autocomplete.js') }}"></script>
    <script src="{{ asset('js/dateValidation.js') }}"></script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('CSS/CityCss.css') }}">
{% endblock %}
